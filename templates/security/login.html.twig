{% extends 'base.html.twig' %}

{% block title %}Acceder - Stockify{% endblock %}

{% block body %}
    {% if error %}
        <div class="d-flex justify-content-center alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-7 align-self-center">
                                        <div class="p-3">
                                            <h2 class="mb-3">Acceder</h2>
                                            <form action="{{ path('login') }}" method="post">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="floating-label form-group">
                                                            <input type="text" name="username" id="inputUsername" class="floating-input form-control" autocomplete="username" placeholder=" " required autofocus>
                                                            <label for="inputUsername">Usuario</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12">
                                                        <div class="floating-label form-group">
                                                            <input type="password" name="password" id="inputPassword" class="floating-input form-control" autocomplete="current-password" placeholder=" " required>
                                                            <label for="inputPassword">Contrase√±a</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                                <button type="submit" class="btn btn-primary">Acceder</button>
                                                <p class="mt-3">
                                                    Crear una cuenta <a href="{{ path('new_user') }}" class="text-primary">Registrarse</a>
                                                </p>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="col-lg-5 content-right">
                                        <img src="{{ asset('assets/images/login/01.png') }}" class="img-fluid image-right" alt="login-img">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
