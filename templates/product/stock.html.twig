{% extends '/base.html.twig' %}

{% block title %}Modificar stock - Stockify{% endblock %}

{% block body %}
    {{ include('components/sidebar.html.twig') }}

    <div class="wrapper">
        <div class="content-page">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                            <div>
                                <h4 class="mb-3">Editar Stock</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div id="input-category-block" class="form-group">
                                        {{ form_row(form.name) }}
                                        <div id="text-input-error" class="help-block">
                                            <ul class="list-unstyled" style="display: none">
                                                <li>Rellene este campo.</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_label(form.category) }}
                                    {{ form_widget(form.category) }}
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h6>Cantidad actual existente en stock: </h6>
                                    <div>
                                        {{ product.stock }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_label(form.stock) }}
                                    {{ form_widget(form.stock, {'value' : 0}) }}
                                </div>
                            </div>
                            <div class="col-md-12 mt-5 text-center">
                                {{ form_row(form.submit) }}
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}