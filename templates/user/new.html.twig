{% extends 'base.html.twig' %}

{% block title %}Registro - Stockify{% endblock %}

{% block body %}

    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-7 align-self-center">
                                        <div class="p-3">
                                            <h2 class="mb-2">Nuevo registro</h2>
                                            {{ form_start(form) }}
                                            {{ form_errors(form) }}
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        {{ form_widget(form.username) }}
                                                        {{ form_label(form.username) }}
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        {{ form_widget(form.password) }}
                                                        {{ form_label(form.password) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <p class="mt-3">
                                                    Â¿Ya tienes una cuenta? <a href="{{ path('login') }}" class="text-primary">Accede a Stockify</a>
                                            </p>
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-5 content-right">
                                        <img src="{{ asset('assets/images/login/01.png') }}" class="img-fluid image-right" alt="login-img">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}